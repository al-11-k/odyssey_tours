<body>
<div id="nav_bar">
    <button>
        <a href="/">Travelers</a>
    </button>
    <button>
        <a href="travel_agents">Travel Agents</a>
    </button> 
    <button>
        <a href="travel_packages">Travel Packages</a>
    </button>
    <button>
        <a href="bookings">Bookings</a>
    </button>
    <button>
        <a href="items">Items</a>
    </button>
    <button>
        <a href="item_types">Item Types</a>
    </button>
</div>
<table id="travel-agent-table">

    {{!-- Header section --}}
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.agent_id}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td>
            <form method="POST" action="/delete-travel-agent/">
                <input type="hidden" name="agent_id" value="{{this.agent_id}}">
                <button style="width=10px" type="submit">Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<!-- /views/index.hbs -->

{{!-- Form to add a record to the table using AJAX --}}
<div id="insert">
<form id="add-travel-agent-form" method="POST" action="/add-travel-agent-form">
    <legend><strong>Add a Travel Agent</strong></legend>
    <fieldset class="fields">
    <label for="input-first-name-agent">First Name: </label>
    <input type="text" name="input-first-name-agent" id="input-first-name-agent">
    
    <label for="input-last-nam-agnete">Last Name: </label>
    <input type="text" name="input-last-name-agent" id="input-last-name-agent">

    <label for="input-email-agent">Email: </label>
    <input type="text" name="input-email-agent" id="input-email-agent">

    <input type="submit" class="affirmButton">
</fieldset>
</form>
</div>

</body>