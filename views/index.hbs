<table id="travelers-table">

    {{!-- Header section --}}
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.traveler_id}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone_number}}</td>
            <td><button onclick="deletePerson({{this.id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<!-- /views/index.hbs -->

{{!-- Form to add a record to the table  --}}
<h2>Adding a Traveler</h2>
<p>To add a new Traveler, please enter their information below and click 'Submit'!</p>
<form id="add-person-form-ajax">
    <label for="input-fname">First Name: </label>
    <input type="text" name="input-first-name" id="input-first-name">
    
    <label for="input-lname">Last Name: </label>
    <input type="text" name="input-last-name" id="input-last-name">

    <label for="input-email">Email: </label>
    <input type="text" name="input-email" id="input-email">

    <label for="input-number">Phone Number: </label>
    <input type="number" name="input-phone-number" id="input-phone-number">

    <input type="submit">
</form>


<h2>Updating a Traveler</h2>
<p>To update a specific traveler</p>
<form id="update-traveler-form-ajax">

    <label for="input-fullname">Full name: </label>
    <select name="input-fullname" id="mySelect">
        <option value="test">Select a Traveler</option>
        {{#each data}}
        <option value="{{this.id}}">{{this.fname}} {{this.lname}}</option>
        {{/each}}
    </select>

    <label for="input-email">Email: </label>
    <input type="text" name="input-email" id="update-email">

    <label for="input-number">Phone Number: </label>
    <input type="number" name="input-number" id="update-number">

    <input type="submit">

</form>

<script src="./js/update_person.js"></script>

