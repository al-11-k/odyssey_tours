<body>
<div id="nav_bar">
    <button>
        <a href="/">Travelers</a>
    </button>
    <button>
        <a href="travel_agents">Travel Agents</a>
    </button> 
    <button>
        <a href="travel_packages">Travel Packages</a>
    </button>
    <button>
        <a href="bookings">Bookings</a>
    </button>
    <button>
        <a href="items">Items</a>
    </button>
    <button>
        <a href="item_types">Item Types</a>
    </button>
</div>

<table id="travelers-table">

    {{!-- Header section --}}
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.traveler_id}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone_number}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<!-- /views/index.hbs -->

{{!-- Form to add a record to the table using AJAX --}}
<div id="insert">
<form id="add-traveler-form" method="POST" action="/add-traveler-form">
    <legend><strong>Add Traveler</strong></legend>
    <fieldset class="fields">
    <label for="input-first-name">First Name: </label>
    <input type="text" name="input-first-name" id="input-first-name">
    
    <label for="input-last-name">Last Name: </label>
    <input type="text" name="input-last-name" id="input-last-name">

    <label for="input-email">Email: </label>
    <input type="text" name="input-email" id="input-email">

    <label for="input-phone-number">Phone Number: </label>
    <input type="number" name="input-phone-number" id="input-phone-number">

    <input type="submit" class="affirmButton">
    </fieldset>
</form>
</div>


<form id="update-traveler-form-ajax">
    <legend><strong>Update Traveler</strong></legend>
    <fieldset class="fields">
    <label for="input-fullname">Full name: </label>
    <select name="input-fullname" id="mySelect">
        <option value="test">Select a Traveler</option>
        {{#each data}}
        <option value="{{this.id}}">{{this.fname}} {{this.lname}}</option>
        {{/each}}
    </select>

    <label for="input-email">Email: </label>
    <input type="text" name="input-email" id="update-email">

    <label for="input-number">Phone Number: </label>
    <input type="number" name="input-number" id="update-number">

    <input type="submit">
    </fieldset>

</form>
</body>


